<%= render partial: 'shared/navbar', locals: { current_user: @user } %>


<div class="flex flex-1 flex-col">
  <div class="flex flex-1">
    <%# CTA %>
    <aside
      class="overflow-hidden w-full bg-[url(https://images.unsplash.com/photo-1458245201577-fc8a130b8829?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1176&q=80)] bg-cover bg-center bg-no-repeat"
    >
      <div class="bg-black/25 p-8 md:p-12 lg:px-16 lg:py-24">
        <div class="max-w-lg text-center sm:text-left">
          <h2 class="text-2xl font-bold text-white sm:text-3xl md:text-5xl">
            <%= @service&.name %>
          </h2>

          <p
            class="hidden max-w-md text-white/90 md:mt-6 md:block md:text-lg md:leading-relaxed"
          >
            <%= @service&.description %>
          </p>

          <p
            class="hidden max-w-md text-white/90 md:mt-6 md:block md:text-lg md:leading-relaxed"
          >
            $<%= @service&.price %>
          </p>

          <div class="mt-4 sm:mt-8 flex flex-1">
            <%= link_to new_web_v1_booking_path(service_id: @service.id), class: 'inline-flex items-center rounded-full bg-blue-700 px-8 py-3 text-white shadow-lg transition hover:bg-blue-600 focus:outline-none focus:ring' do %>
                <span class="text-sm font-medium"> Order Now </span>

                <svg
                  class="ml-3 h-5 w-5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
            <% end %>
          </div>
        </div>
      </div>
    </aside>

  </div>

  <div class="flex flex-1 p-10 flex-row">
    <%# Added Service Feature%>

    <% @service.service_features.each do |service_feature| %>
      <div class="flex m-3 border rounded-lg">
      <a
        href=""
        disabled=true
        class="group block bg-white p-6 transition-shadow hover:shadow-sm sm:pr-12"
      >
        <span class="inline-block rounded-sm bg-blue-600 p-2 text-white">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path d="M12 14l9-5-9-5-9 5 9 5z" />
            <path
              d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
            />
          </svg>
        </span>

        <h2 class="mt-3 text-lg font-bold">
          <%= service_feature.name %>
        </h2>

        <p class="mt-3 text-sm text-gray-500">
          <%= service_feature.description %>
        </p>

        <p class="relative mt-16 inline-block text-sm font-bold text-blue-600">
          <span
            class="absolute inset-x-0 bottom-0 h-2/3 transform bg-blue-100 transition-transform group-hover:scale-110"
          ></span>
        </p>
      </a>
    </div>
    <% end %>
  </div>


  <div class="mt-4 sm:mt-8 flex flex-1 justify-center">
    <%= link_to web_v1_bookings_path(service_id: @service.id), method: :post, class: 'inline-flex items-center rounded-full bg-blue-700 px-8 py-3 text-white shadow-lg transition hover:bg-blue-600 focus:outline-none focus:ring' do %>
        <span class="text-sm font-medium"> Order Now </span>

        <svg
          class="ml-3 h-5 w-5"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"
          />
        </svg>
    <% end %>
  </div>
<div>


<%= render partial: 'shared/footer' %>
