<div class="flex flex-1 flex-col m-5 p-3 border border-gray-300 rounded-md shadow-md">
  <div class="flex text-xl text-gray-700">Filter By:</div>
  <div class='flex flex-row flex-1 p-3'>
    <%= form_with url: 'services', method: :get do |form| %>
      <%= label_tag 'People Choice' %>
      <%= select_tag 'popularity_choice_select',
        options_for_select(Service.popularity_choices),
        class: 'border border-gray-300 p-2 rounded-md' %>
      <div class='flex my-2'>
        <%= form.submit 'Filter', class: 'cursor-pointer px-3 py-2 text-white bg-blue-400 rounded-md'%>
      </div>
    <% end %>
  </div>
</div>
