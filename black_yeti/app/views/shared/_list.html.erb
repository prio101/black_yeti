<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8">
    <div>
      <span class="inline-block h-1 w-12 bg-red-700"></span>

      <h2
        class="mt-1 text-2xl font-extrabold uppercase tracking-wide lg:text-3xl"
      >
        <%= t('services.services') %>
      </h2>
    </div>

    <div class="mt-8 grid grid-cols-2 gap-x-4 gap-y-8 lg:grid-cols-4">
      <% services&.each do |service| %>
        <%= link_to web_v1_service_path(service.id), class: 'block' do %>
          <div class="flex justify-center">
            <strong
              class="relative h-6 bg-black px-4 text-xs uppercase leading-6 text-white"
            >
              <%= ['New', 'Regular', 'Popular'].sample%>
            </strong>
          </div>

          <img
            alt="Trainer"
            src="https://images.unsplash.com/photo-1592654665285-557bd6baf26c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
            class="-mt-3 h-96 w-full object-cover"
          />

          <h5 class="mt-4 text-sm text-black/90">
            <%= service.name %>
          </h5>

          <div class="mt-4 flex items-center justify-between font-bold">
            <p class="text-lg">$<%= service.price %></p>

            <p class="text-xs uppercase tracking-wide"><%= service.tag %></p>
          </div>
        <% end %>

    <% end %>


    </div>
  </div>

</section>
