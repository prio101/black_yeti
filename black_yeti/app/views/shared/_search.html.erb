<div class="flex flex-1 justify-center">
  <div class="flex p-5">
    <%= form_with url: 'services', method: :get do |form| %>
      <%= form.text_field :search, class: 'p-3 rounded-md border border-gray-800 h-10' %>
      <%= form.submit 'Search', class: 'mx-2 border border-gray-400 text-black hover:bg-blue-400 hover:text-white p-2 rounded-md'%>
    <% end %>
  </div>
</div>
